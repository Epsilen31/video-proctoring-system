{
  "name": "focus-proctor",
  "private": true,
  "version": "0.1.0",
  "description": "Focus & Object Detection in Video Interviews monorepo",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "pnpm -r test",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm exec eslint --max-warnings=0 --fix"
    ],
    "*.{json,md,css,scss,html}": [
      "pnpm exec prettier --write"
    ]
  },
  "packageManager": "pnpm@10.16.1",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^22.18.4",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "globals": "^16.4.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  },
  "type": "module"
}
